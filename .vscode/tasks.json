{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Scripts/main.cpp",
                "${workspaceFolder}/Scripts/board.cpp",
                "${workspaceFolder}/Scripts/window.cpp",
                "-o",
                "${workspaceFolder}/Scripts/main",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Scripts"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build project with SFML"
        }
    ]
}
